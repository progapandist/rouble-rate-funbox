<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-wrapper">
        <%= simple_form_for @exchange_rate do |f| %>
        <%= f.input :date, value: f.object.date %>
        <%= f.input :rate %>
        <%= f.submit "Set Forced Rate", class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
